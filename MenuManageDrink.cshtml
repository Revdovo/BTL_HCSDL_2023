@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html class="login-pf">
<head>
    <title>Main</title>
    <link rel="stylesheet" href="../style.css">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Style for the dropdown button */
        .dropdown-btn {
            padding: 10px;
            background-color: #4CAF50;
            color: white;
            border: none;
            cursor: pointer;
            width: 200px; /* Adjust the width as needed */
        }

        /* Style for the dropdown content */
        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #f9f9f9;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 1;
            min-width: 120px; /* Adjust the width as needed */
        }

            /* Style for the dropdown items */
            .dropdown-content a {
                padding: 12px 16px;
                display: block;
                text-decoration: none;
                color: #333;
            }

                /* Change color on hover */
                .dropdown-content a:hover {
                    background-color: #ddd;
                }

        /* Show the dropdown content when the dropdown button is clicked */
        .dropdown:hover .dropdown-content {
            display: block;
        }
    </style>
</head>
<body style="overflow-y: auto; height: 100%; background-color: mediumspringgreen;">
    <div class="dropdown">
        <!-- Dropdown button -->
        <button class="dropdown-btn">Menu</button>

        <!-- Dropdown content -->
        <div class="dropdown-content">
            <a asp-area="" asp-controller="Home" asp-action="MenuManageMain">Quảng lý Pizza</a>
            <a>Quản lý Món Nước</a>
            <a asp-area="" asp-controller="Home" asp-action="MenuManageDesert">Quản lý Tráng Miệng</a>
        </div>
    </div>
    <div class="form-container">
        <div class="form-title">Quản lý Đồ Uống</div>

        <form id="drinkForm">
            <div class="form-grid">
                <input type="text" class="form-input" placeholder="ID">
                <input type="text" class="form-input" placeholder="Nhãn hiệu">
                <input type="text" class="form-input" placeholder="Giá cho size S">
            </div>

            <div class="size-option">
                <label for="drinkSize">Size:</label>
                <div class="size-buttons">
                    <button type="button" value="S">S</button>
                    <button type="button" value="M">M</button>
                    <button type="button" value="L">L</button>
                    <button type="button" value="XS">XS</button>
                    <button type="button" value="XL">XL</button>
                </div>
            </div>

            <div class="form-buttons">
                <button type="button" class="add">Add</button>
                <button type="button" class="delete">Delete</button>
                <button type="button" class="rewrite">Rewrite</button>
            </div>

            <div class="box">
                <div class="inner-box">
                </div>
            </div>
        </form>
    </div>
</body>
</html>